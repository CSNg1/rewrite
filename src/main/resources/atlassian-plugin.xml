<atlassian-plugin key="${atlassian.plugin.key}" name="Linking Plugin (Rewrite)" plugins-version="2" >
    <plugin-info>
        <description>${pom.description}</description>
        <version>${pom.version}</version>
        <!--<param name="plugin-icon">icon.png</param>
        <param name="plugin-logo">logo.png</param>-->
    </plugin-info>

    <xhtml-macro name="tutorial-macro"
                 class="com.servicerocket.chisiang.plugin.linking.ExampleMacro" key="my-macro">
        <parameters/>
    </xhtml-macro>

    <xhtml-macro name="linkpage"
                 class="com.servicerocket.chisiang.plugin.linking.LinkPageMacro"
                 key="linkpage-macro">
        <description>Link Page</description>
        <parameters>
            <parameter name="name" type="confluence-content">
                <alias name=""/>
            </parameter>
            <parameter name="linkText" type="string" required="true"/>
            <parameter name="source" type="confluence-content">
            </parameter>
        </parameters>
    </xhtml-macro>

</atlassian-plugin>
